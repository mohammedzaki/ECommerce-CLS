@{
    Layout = "_BasicLayout";
}
@using ECommerce.Web.Models.Account;
@model LoginModel

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<main class="form-signin w-100 m-auto">
  <form asp-action="Login" method="post">
    <img class="mb-4" src="../assets/brand/bootstrap-logo.svg" alt="" width="72" height="57">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

    <div class="form-floating">
            <input asp-for="Email"  type="email" class="form-control" placeholder="name@example.com">
            <label asp-for="Email">Email address</label>
    </div>
    <div class="form-floating">
            <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password">
      <label asp-for="Password">Password</label>
    </div>

    <div class="form-check text-start my-3">
      <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
      <label class="form-check-label" for="flexCheckDefault">
        Remember me
      </label>
    </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Sign in</button>
        <a asp-action="Register">Register a new account</a>
    <p class="mt-5 mb-3 text-body-secondary">&copy; 2017–2023</p>
  </form>
</main>
